<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <!-- Allow Google Play services to be resolved when requesting Firebase tokens -->
        <package android:name="com.google.android.gms" />
    </queries>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.PROG7314_Universe"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- SPLASH ACTIVITY - Entry Point -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LOGIN ACTIVITY -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.PROG7314_Universe" />

        <!-- MAIN ACTIVITY - Dashboard -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.PROG7314_Universe" />

        <!-- Other activities -->
        <activity
            android:name=".HabitsActivity"
            android:exported="false" />
        <activity
            android:name=".HabitListActivity"
            android:exported="false" />
        <activity
            android:name=".AddEditHabitActivity"
            android:exported="false"
            android:label="Habit" />
        <activity
            android:name=".CreateHabitActivity"
            android:label="Create Habit"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".AddContributionActivity"
            android:exported="false" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />
        <activity android:name=".TaskActivity" />
        <activity android:name=".AddTaskActivity" />
        <activity android:name=".ExamsActivity" />
        <activity android:name=".AddExamActivity" />
        <activity android:name=".SavingsGoalActivity" />
        <activity android:name=".CreateSavingsGoalActivity" />
    </application>

</manifest>