<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!-- Outer circle -->
            <item>
                <shape
                    android:shape="oval">
                    <solid android:color="#2196F3" />
                    <stroke
                        android:width="2dp"
                        android:color="#2196F3" />
                    <size
                        android:width="24dp"
                        android:height="24dp" />
                </shape>
            </item>
            <!-- Inner check mark -->
            <item
                android:drawable="@drawable/ic_check_white"
                android:top="4dp"
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#666666" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
</selector>