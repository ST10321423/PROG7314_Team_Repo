<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_container">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Habit"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp" />

            <!-- Habit Name Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habit Name"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="#94d5ca"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., Morning Workout, Read 30 minutes"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Color Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color (Hex Code)"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="#94d5ca"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="#4CAF50"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Time of Day Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time of Day"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerTime"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Difficulty Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Difficulty"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgDifficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbEasy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ˜Š Easy"
                    android:textSize="14sp"
                    android:padding="8dp" />

                <RadioButton
                    android:id="@+id/rbMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ’ª Medium"
                    android:textSize="14sp"
                    android:checked="true"
                    android:padding="8dp" />

                <RadioButton
                    android:id="@+id/rbHard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”¥ Hard"
                    android:textSize="14sp"
                    android:padding="8dp" />

            </RadioGroup>

            <!-- Days of Week Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Days (leave all unchecked for daily)"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8F5F3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center">

                    <!-- Your CheckBoxes (Monâ€“Sun) remain unchanged -->
                    <CheckBox
                        android:id="@+id/cbMon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="M"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox" />

                    <!-- ... repeat Tueâ€“Sun ... -->

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Habit"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="18dp"
                app:backgroundTint="@color/primary1"
                android:textColor="@color/on_primary"
                android:layout_marginBottom="12dp"
                style="@style/Widget.Material3.Button"
                app:icon="@drawable/ic_add_24dp"
                app:iconGravity="textStart" />

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Delete Habit"
                android:textSize="16sp"
                app:cornerRadius="18dp"
                app:strokeColor="#D32F2F"
                app:strokeWidth="2dp"
                app:backgroundTint="@android:color/transparent"
                android:textColor="#D32F2F"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_nav"
        app:itemIconTint="@drawable/bottom_nav_icon_colour"
        app:itemTextColor="@drawable/bottom_nav_text_color"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>
