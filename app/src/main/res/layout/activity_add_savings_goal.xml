<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Savings Target"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textAlignment="textStart"/>

    <!-- Target Name Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Target Name"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Rounded"
    app:boxBackgroundMode="outline"
    app:boxBackgroundColor="#94d5ca">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cape Town Trip"
        android:textSize="16sp"
        android:padding="16dp" />

</com.google.android.material.textfield.TextInputLayout>

    <!-- Target Deadline Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Target Deadline"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Rounded"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="#94d5ca">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Date"
            android:textSize="16sp"
            android:padding="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Savings Target Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Savings Target"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Rounded"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="#94d5ca">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="R15000.00"
            android:textSize="16sp"
            android:padding="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">



  <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/AddHabitButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Next"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="18dp"
        app:backgroundTint="@color/primary1"
        android:textColor="@color/on_primary"
        android:layout_marginBottom="24dp"
        style="@style/Widget.Material3.Button"/>

    </LinearLayout>









</LinearLayout>