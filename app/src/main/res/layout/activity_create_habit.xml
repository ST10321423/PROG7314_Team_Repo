<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Habit"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="35dp"/>

        <!-- Habit Type Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habit Type"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />





        <RadioGroup
            android:id="@+id/habitTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/regularHabit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Regular Habit"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/oneTimeTask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="One Time Task"
                android:textSize="14sp" />
        </RadioGroup>

        <!-- Habit Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habit Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/habitNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Habit Name"
                android:minHeight="48dp"
                style="@style/TextAppearance.Material3.SearchBar"/>
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Repeat Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/repeatGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/daily"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Daily"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/weekly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weekly"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/monthly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monthly"
                android:textSize="14sp" />
        </RadioGroup>

        <!-- Days of Week -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On These Days:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <!-- Sunday -->
            <TextView
                android:id="@+id/sunday"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="S"
                android:textSize="14sp"
                android:background="@drawable/day_unselected"
                android:layout_margin="2dp" />

            <!-- Monday -->
            <TextView
                android:id="@+id/monday"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="M"
                android:textSize="14sp"
                android:background="@drawable/day_unselected"
                android:layout_margin="2dp" />

            <!-- Tuesday -->
            <TextView
                android:id="@+id/tuesday"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="T"
                android:textSize="14sp"
                android:background="@drawable/day_unselected"
                android:layout_margin="2dp" />

            <!-- Wednesday -->
            <TextView
                android:id="@+id/wednesday"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="W"
                android:textSize="14sp"
                android:background="@drawable/day_unselected"
                android:layout_margin="2dp" />

            <!-- Thursday -->
            <TextView
                android:id="@+id/thursday"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="T"
                android:textSize="14sp"
                android:background="@drawable/day_unselected"
                android:layout_margin="2dp" />

            <!-- Friday -->
            <TextView
                android:id="@+id/friday"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="F"
                android:textSize="14sp"
                android:background="@drawable/day_unselected"
                android:layout_margin="2dp" />

            <!-- Saturday -->
            <TextView
                android:id="@+id/saturday"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="S"
                android:textSize="14sp"
                android:background="@drawable/day_unselected"
                android:layout_margin="2dp" />
        </LinearLayout>

        <!-- Do It At Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do It At:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/timeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/morning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Morning"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/afternoon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Afternoon"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/night"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Night"
                android:textSize="14sp" />
        </RadioGroup>

        <!-- Difficulty -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Difficulty"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/difficultySpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/spinner_background" />

        <!-- End Habit On -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Habit On"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/endDateButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Select Date"
            android:textSize="14sp"
            android:background="@drawable/button_background"
            android:layout_marginBottom="24dp" />

        <!-- Set Reminder -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/reminderSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Reminder"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Add Habit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/AddHabitButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Add Habit"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="18dp"
            app:backgroundTint="@color/primary1"
            android:textColor="@color/on_primary"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button"
            app:iconGravity="textStart"
            app:icon="@drawable/ic_add_24dp"/>

    </LinearLayout>
</ScrollView>