<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <!-- Create New Habit Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Habit"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_marginBottom="32dp" />

        <!-- Habit Type Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <!-- Regular Habit Button -->
            <TextView
                android:id="@+id/regularHabitButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_left_selected"
                android:text="Regular Habit"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- One Time Task Button -->
            <TextView
                android:id="@+id/oneTimeTaskButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_right_unselected"
                android:text="One Time Task"
                android:textColor="#666666"
                android:gravity="center"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Habit Name Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habit Name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Habit Name Input -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_left_selected"
            android:hint="Habit Name"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Icon and Color Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">



            <!-- Spacer -->
            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />



        </LinearLayout>

        <!-- Repeat Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Repeat Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Daily -->
            <TextView
                android:id="@+id/dailyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_left_selected"
                android:text="Daily"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Weekly -->
            <TextView
                android:id="@+id/weeklyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_middle_unselected"
                android:text="Weekly"
                android:textColor="#666666"
                android:gravity="center"
                android:textSize="16sp" />

            <!-- Monthly -->
            <TextView
                android:id="@+id/monthlyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_right_unselected"
                android:text="Monthly"
                android:textColor="#666666"
                android:gravity="center"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Days of Week -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On These Days:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />



        <!-- Do It At Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do It At:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Time Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Morning -->
            <TextView
                android:id="@+id/morningButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_left_selected"
                android:text="Morning"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Afternoon -->
            <TextView
                android:id="@+id/afternoonButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_middle_unselected"
                android:text="Afternoon"
                android:textColor="#666666"
                android:gravity="center"
                android:textSize="16sp" />

            <!-- Night -->
            <TextView
                android:id="@+id/nightButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_right_unselected"
                android:text="Night"
                android:textColor="#666666"
                android:gravity="center"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Difficulty Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Difficulty"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />



            <!-- Difficulty Dropdown -->
            <Spinner
                android:id="@+id/difficultySpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_left_selected"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:spinnerMode="dropdown"
                android:entries="@array/difficulty_levels"
                android:layout_marginBottom="24dp" />



        <!-- End Habit On Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Habit On"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- End Habit Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_border"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#666666"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:tint="#666666" />

        </LinearLayout>

        <!-- Set Reminder Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Reminder"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Set Reminder Input -->


        <!-- Yes/No Toggle Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Reminders"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/reminderSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/switch_thumb"
                android:trackTint="@color/switch_track" />

        </LinearLayout>

        <!-- Add Habit Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_button"
            android:text="Add Habit"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>