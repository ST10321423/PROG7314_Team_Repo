<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_container">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_habit"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp" />

            <!-- Habit Name Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/habit_name"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="#94d5ca"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEditHabitName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_habit_name_examples"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Color Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/color_hex_code"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="#94d5ca"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEditHabitColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_color_example"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Time of Day Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_of_day"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTime"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Rounded">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/spinnerEditHabitTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_select_time"
                    android:inputType="none"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:padding="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Difficulty Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/difficulty"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgDifficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbEditEasy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/difficulty_easy_label"
                    android:textSize="14sp"
                    android:padding="8dp" />

                <RadioButton
                    android:id="@+id/rbEditMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/difficulty_medium_label"
                    android:textSize="14sp"
                    android:checked="true"
                    android:padding="8dp" />

                <RadioButton
                    android:id="@+id/rbEditHard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/difficulty_hard_label"
                    android:textSize="14sp"
                    android:padding="8dp" />

            </RadioGroup>

            <!-- Days of Week Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/days_hint"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8F5F3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/cbMonEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/day_m_initial"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox" />

                    <CheckBox
                        android:id="@+id/cbTuesEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/day_t_initial"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox" />

                    <CheckBox
                        android:id="@+id/cbWedEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/day_w_initial"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox" />

                    <CheckBox
                        android:id="@+id/cbThursEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/day_t_initial"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox" />

                    <CheckBox
                        android:id="@+id/cbFriEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/day_f_initial"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox" />

                    <CheckBox
                        android:id="@+id/cbSatEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/day_s_initial"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox" />

                    <CheckBox
                        android:id="@+id/cbSunEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/day_s_initial"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:button="@drawable/custom_checkbox" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditHabit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/save_habit"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="18dp"
                app:backgroundTint="@color/primary1"
                android:textColor="@color/on_primary"
                android:layout_marginBottom="12dp"
                style="@style/Widget.Material3.Button"
                app:icon="@drawable/ic_add_24dp"
                app:iconGravity="textStart" />

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteHabit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/delete_habit"
                android:textSize="16sp"
                app:cornerRadius="18dp"
                app:strokeColor="#D32F2F"
                app:strokeWidth="2dp"
                app:backgroundTint="@android:color/transparent"
                android:textColor="#D32F2F"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_nav"
        app:itemIconTint="@drawable/bottom_nav_icon_colour"
        app:itemTextColor="@drawable/bottom_nav_text_color"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>
