<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exams"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Search exams text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search exams..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@drawable/search_background" />

            <!-- Filter tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/btnExamCatAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All (6)"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/tab_active_background" />

                <TextView
                    android:id="@+id/etExamComp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed (4)"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp" />

            <!-- Task List -->
            <!-- Lab Report -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/task_item_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <CheckBox
                    android:id="@+id/checkbox_lab_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:button="@drawable/custom_checkbox" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lab Report"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biology 101"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/14/2025"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:background="#666666"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h 30m"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Math Problem Set -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/task_item_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <CheckBox
                    android:id="@+id/checkbox_math_problems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:button="@drawable/custom_checkbox" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Math Problem Set"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calculus II"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/16/2025"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:background="#666666"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h 30m"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_nav"
        app:itemIconTint="@drawable/bottom_nav_icon_colour"
        app:itemTextColor="@drawable/bottom_nav_text_color"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>
