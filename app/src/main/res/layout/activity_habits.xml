<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Habits"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Search habits -->
            <EditText
                android:id="@+id/sbHabits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search Habits..."
                android:textSize="14sp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:background="@drawable/search_background" />


            <!-- Filter tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="20dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning (6)"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/tab_active_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Afternoon (4)"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Night (4)"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/task_item_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Checkbox -->
                <CheckBox
                    android:id="@+id/checkbox_lab_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:button="@drawable/custom_checkbox" />

                <!-- Task details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lab Report"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biology 101"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/14/2025"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:background="#666666"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h 30m"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/task_item_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Checkbox -->
                <CheckBox
                    android:id="@+id/checkbox_math_problems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:button="@drawable/custom_checkbox" />

                <!-- Task details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Math Problem Set"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calculus II"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/16/2025"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:background="#666666"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h 30m"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Research Paper Outline 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/task_item_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Checkbox -->
                <CheckBox
                    android:id="@+id/checkbox_research_paper_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:button="@drawable/custom_checkbox" />

                <!-- Task details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Research Paper Outline"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Environmental Science"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/17/2025"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:background="#666666"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Research Paper Outline 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/task_item_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Checkbox -->
                <CheckBox
                    android:id="@+id/checkbox_research_paper_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:button="@drawable/custom_checkbox" />

                <!-- Task details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Research Paper Outline"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Environmental Science"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5/17/2025"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:background="#666666"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Add new task"
        app:tint="@android:color/white"
        app:backgroundTint="#12bfa2" />

    <!-- Fixed Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_nav"
        app:itemIconTint="@drawable/bottom_nav_icon_colour"
        app:itemTextColor="@drawable/bottom_nav_text_color"
        app:menu="@menu/bottom_navigation_menu" />



</LinearLayout>
