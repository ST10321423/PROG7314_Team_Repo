<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/surface_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="56dp"
        android:paddingBottom="24dp"
        android:gravity="center">

        <!-- Logo/App Name Section -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="24dp" />

        <!-- Title Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to UNIverse"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Academic Companion"
            android:textSize="16sp"
            android:textColor="@color/on_surface"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:alpha="0.7" />

        <!-- Sign In Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in to continue"
            android:textSize="18sp"
            android:textColor="@color/on_surface"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Google Sign-In Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleSignInButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue with Google"
            android:textSize="16sp"
            app:cornerRadius="18dp"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp"
            app:backgroundTint="@color/surface"
            android:textColor="@color/on_surface"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_google"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- Divider with "Or" -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/outline_variant"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or"
                android:textSize="14sp"
                android:textColor="@color/on_surface"
                android:paddingHorizontal="16dp"
                android:background="@color/surface_container"
                android:layout_centerInParent="true"
                android:alpha="0.7" />

        </RelativeLayout>

        <!-- Facebook Sign-In Button (Optional - can be removed if not used) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/facebookButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue with Facebook"
            android:textSize="16sp"
            app:cornerRadius="18dp"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp"
            app:backgroundTint="@color/surface"
            android:textColor="@color/on_surface"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_facebook"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- Terms and Privacy Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to our Terms of Service and Privacy Policy"
            android:textSize="12sp"
            android:textColor="@color/on_surface"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:alpha="0.6"
            android:paddingHorizontal="16dp" />

    </LinearLayout>
</ScrollView>