<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/m3_sys_light_surface_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Settings"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>

        <!-- Theme Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:textColor="@color/m3_sys_light_on_surface" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_item_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Light Mode"
                    android:textSize="16sp"
                    android:textColor="@color/m3_sys_light_on_surface" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbLightMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/m3_sys_light_primary" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/m3_sys_light_outline_variant"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dark Mode"
                    android:textSize="16sp"
                    android:textColor="@color/m3_sys_light_on_surface" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbDarkMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/m3_sys_light_primary" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/m3_sys_light_outline_variant"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="System Default"
                    android:textSize="16sp"
                    android:textColor="@color/m3_sys_light_on_surface" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/rbSystemDef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/m3_sys_light_primary"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- Notifications Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="16dp"
            android:textColor="@color/m3_sys_light_on_surface" />

        <!-- Push Notifications Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_item_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Push Notifications"
                    android:textSize="16sp"
                    android:textColor="@color/m3_sys_light_on_surface" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:trackTint="@color/m3_sys_light_primary"
                    app:thumbTint="@color/m3_sys_light_on_primary" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive reminders for upcoming deadlines and events"
                android:textSize="14sp"
                android:textColor="@color/m3_sys_light_on_surface_variant"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/m3_sys_light_outline_variant"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <!-- Email Notifications Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_item_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email Notifications"
                    android:textSize="16sp"
                    android:textColor="@color/m3_sys_light_on_surface" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:trackTint="@color/m3_sys_light_primary"
                    app:thumbTint="@color/m3_sys_light_on_primary" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive weekly summaries and important updates"
                android:textSize="14sp"
                android:textColor="@color/m3_sys_light_on_surface_variant"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/m3_sys_light_outline_variant"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <!-- Sound Effects Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_item_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sound Effects"
                    android:textSize="16sp"
                    android:textColor="@color/m3_sys_light_on_surface" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:trackTint="@color/m3_sys_light_primary"
                    app:thumbTint="@color/m3_sys_light_on_primary" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play sounds for notifications and actions"
                android:textSize="14sp"
                android:textColor="@color/m3_sys_light_on_surface_variant"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp" />

        </LinearLayout>

        <!-- Account Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="16dp"
            android:textColor="@color/m3_sys_light_on_surface" />

        <!-- Account Options Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_item_background"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit Profile"
                    android:textSize="16sp"
                    android:textColor="@color/m3_sys_light_on_surface" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/m3_sys_light_on_surface_variant" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/m3_sys_light_outline_variant"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Privacy &amp; Security"
                    android:textSize="16sp"
                    android:textColor="@color/m3_sys_light_on_surface" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/m3_sys_light_on_surface_variant" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/m3_sys_light_outline_variant"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Connected Accounts"
                    android:textSize="16sp"
                    android:textColor="@color/m3_sys_light_on_surface" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/m3_sys_light_on_surface_variant" />

            </LinearLayout>

        </LinearLayout>

        <!-- Log Out Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/AddHabitButton"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="56dp"
            android:text="Logout"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="18dp"
            app:backgroundTint="@color/primary1"
            android:textColor="@color/on_primary"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</ScrollView>