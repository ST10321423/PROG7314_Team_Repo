<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Your Moods"
            app:titleTextColor="@color/text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Weekly Mood Stats Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Mood"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_week_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        tools:text="Apr 1 - Apr 7" />

                    <TextView
                        android:id="@+id/tv_total_moods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="6 moods logged" />

                    <!-- Mood Stats Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <!-- Happy -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ˜Š"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_happy_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_happy"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="4dp"
                                android:layout_marginTop="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="#FFD93D" />
                        </LinearLayout>

                        <!-- Sad -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ˜¢"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_sad_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_sad"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="4dp"
                                android:layout_marginTop="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="#6BCB77" />
                        </LinearLayout>

                        <!-- Angry -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ˜ "
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_angry_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_angry"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="4dp"
                                android:layout_marginTop="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="#FF6B6B" />
                        </LinearLayout>

                        <!-- Fear -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ˜°"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_fear_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_fear"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="4dp"
                                android:layout_marginTop="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="#4D96FF" />
                        </LinearLayout>

                        <!-- Disgust -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ˜–"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/tv_disgust_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_disgust"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="4dp"
                                android:layout_marginTop="4dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="#9D84B7" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Calendar Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Month Navigation -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btn_previous_month"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Previous month"
                            android:src="@drawable/ic_chevron_left" />

                        <TextView
                            android:id="@+id/tv_month_year"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="December 2025"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btn_next_month"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Next month"
                            android:src="@drawable/ic_chevron_right" />
                    </LinearLayout>

                    <!-- Day Headers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="7">

                        <TextView
                            style="@style/CalendarDayHeader"
                            android:text="S" />

                        <TextView
                            style="@style/CalendarDayHeader"
                            android:text="M" />

                        <TextView
                            style="@style/CalendarDayHeader"
                            android:text="T" />

                        <TextView
                            style="@style/CalendarDayHeader"
                            android:text="W" />

                        <TextView
                            style="@style/CalendarDayHeader"
                            android:text="T" />

                        <TextView
                            style="@style/CalendarDayHeader"
                            android:text="F" />

                        <TextView
                            style="@style/CalendarDayHeader"
                            android:text="S" />
                    </LinearLayout>

                    <!-- Calendar Grid -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_mood_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:itemCount="30"
                        tools:listitem="@layout/item_mood_calendar" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_todays_mood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="Today's Mood"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_mood"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Edit Mood"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>