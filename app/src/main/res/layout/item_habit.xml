<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@drawable/task_item_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cbComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Habit Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/habit_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/cbComplete"
            app:layout_constraintEnd_toStartOf="@id/btnEdit"
            app:layout_constraintTop_toTopOf="@id/cbComplete"
            app:layout_constraintBottom_toBottomOf="@id/cbComplete" />

        <!-- Edit Button -->
        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/edit"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Streak Info -->
        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/habit_streak_placeholder"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/cbComplete"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintEnd_toStartOf="@id/btnEdit" />

        <!-- Due Badge -->
        <TextView
            android:id="@+id/tvDueBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/due_today"
            android:textSize="12sp"
            android:textColor="#000000"
            android:background="@drawable/badge_background"
            android:paddingVertical="4dp"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/cbComplete"
            app:layout_constraintTop_toBottomOf="@id/tvStreak" />

        <!-- Time & Difficulty Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/cbComplete"
            app:layout_constraintTop_toBottomOf="@id/tvDueBadge"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvTimeOfDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/morning"
                android:textSize="12sp"
                android:textColor="#999999"
                android:drawablePadding="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/easy"
                android:textSize="12sp"
                android:textColor="#999999" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

