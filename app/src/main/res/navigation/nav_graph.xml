<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.prog7314_universe.SplashFragment"
        android:label="Splash" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.prog7314_universe.LoginFragment"
        android:label="Login" />

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.prog7314_universe.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_moodTrackerFragment"
            app:destination="@id/moodTrackerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_journalListFragment"
            app:destination="@id/journalListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_tasksListFragment"
            app:destination="@id/tasksListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_habitListFragment"
            app:destination="@id/habitListFragment" />
    </fragment>

    <!-- Mood Tracker Navigation -->
    <fragment
        android:id="@+id/moodTrackerFragment"
        android:name="com.example.prog7314_universe.MoodTrackerFragment"
        android:label="Mood Tracker">
        <action
            android:id="@+id/action_moodTrackerFragment_to_createMoodFragment"
            app:destination="@id/createMoodFragment" />
    </fragment>

    <fragment
        android:id="@+id/createMoodFragment"
        android:name="com.example.prog7314_universe.CreateMoodFragment"
        android:label="Create Mood">
        <argument
            android:name="selected_date"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>

    <!-- Journal Navigation -->
    <fragment
        android:id="@+id/journalListFragment"
        android:name="com.example.prog7314_universe.JournalListFragment"
        android:label="Journal">
        <action
            android:id="@+id/action_journalListFragment_to_createJournalFragment"
            app:destination="@id/createJournalFragment" />
    </fragment>

    <fragment
        android:id="@+id/createJournalFragment"
        android:name="com.example.prog7314_universe.CreateJournalFragment"
        android:label="Create Journal Entry">
        <argument
            android:name="entry_id"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Tasks Fragment -->
    <fragment
        android:id="@+id/tasksListFragment"
        android:name="com.example.prog7314_universe.TasksListFragment"
        android:label="Tasks" >
        <action
        android:id="@+id/action_tasksListFragment_to_addTaskFragment"
        app:destination="@id/addTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.example.prog7314_universe.AddTaskFragment"
        android:label="Add Task" />

    <fragment
        android:id="@+id/examsFragment"
        android:name="com.example.prog7314_universe.ExamsFragment"
        android:label="Exams">
        <action
            android:id="@+id/action_examsFragment_to_addExamFragment"
            app:destination="@id/addExamFragment" />
    </fragment>

    <fragment
        android:id="@+id/addExamFragment"
        android:name="com.example.prog7314_universe.AddExamFragment"
        android:label="Add Exam">
        <argument
            android:name="exam_id"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="exam_subject"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="exam_module"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="exam_date"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="exam_start_time"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="exam_end_time"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="exam_description"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <!-- Habits Fragment -->
    <fragment
        android:id="@+id/habitListFragment"
        android:name="com.example.prog7314_universe.HabitListFragment"
        android:label="Habits" >
        <action
            android:id="@+id/action_habitListFragment_to_addEditHabitFragment"
            app:destination="@id/addEditHabitFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditHabitFragment"
        android:name="com.example.prog7314_universe.AddEditHabitFragment"
        android:label="Add/Edit Habit">
        <argument
            android:name="habitId"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <!-- Savings Fragment -->
    <fragment
        android:id="@+id/savingGoalFragment"
        android:name="com.example.prog7314_universe.SavingsGoalFragment"
        android:label="Savings Goal" />

    <fragment
        android:id="@+id/createSavingsGoalFragment"
        android:name="com.example.prog7314_universe.CreateSavingsGoalFragment"
        android:label="Create Savings Goal" >
        <argument
            android:name="user_id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/addContributionFragment"
        android:name="com.example.prog7314_universe.AddContributionFragment"
        android:label="Add Contribution">
        <argument
            android:name="user_id"
            app:argType="string"/>
        <argument
            android:name="goal_id"
            app:argType="string"
            app:nullable="true"/>
    </fragment>

    <fragment
        android:id="@+id/savingsFragment"
        android:name="com.example.prog7314_universe.SavingsFragment"
        android:label="Savings"/>

    <fragment
        android:id="@+id/fridgeFragment"
        android:name="com.example.prog7314_universe.FridgeFragment"
        android:label="Fridge"/>

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.prog7314_universe.ProfileFragment"
        android:label="Profile" />

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.prog7314_universe.SettingsFragment"
        android:label="Settings" />

</navigation>